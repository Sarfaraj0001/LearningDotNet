
@{
    ViewBag.Title = "GetUserImageForEdit";
    Layout = "~/Views/Admin_LayoutPage2.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form with Bootstrap</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv+3v8JNctG2VXY1bG6ZVffJfXsHvh9c5RU8EIJb82Wpv8n9+/F1OxKsdYb" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container my-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Update Your Profile</h2>
            <form action="/Admin/UpdateUserImage" method="POST" enctype="multipart/form-data">
                <!-- Profile Image -->
                <div class="mb-3">
                    <label for="profileImage" class="form-label">Profile Image:</label>
                    <input type="file" id="profileImage" name="profileImage" class="form-control" accept="image/*">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (optional) -->

</body>
