
@{
    ViewBag.Title = "GetUserDetailsForEdit";
    Layout = "~/Views/Admin_LayoutPage2.cshtml";
}

@model LearningDotNet.Models.User
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form with Bootstrap</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJv+3v8JNctG2VXY1bG6ZVffJfXsHvh9c5RU8EIJb82Wpv8n9+/F1OxKsdYb" crossorigin="anonymous">
</head>
<body class="bg-light">

    <div class="container my-5">
        <div class="card shadow-sm p-4">
            <h2 class="text-center mb-4">Update Users Details</h2>
            <form action="/Admin/UpdateUserDetails" method="POST" enctype="multipart/form-data">
                <!-- Full Name -->
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name:</label>
                    <input value="@Model.FullName" type="text" id="fullName" name="fullName" class="form-control" required>
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input value="@Model.Email" type="email" id="email" name="email" class="form-control" required>
                </div>

                <!-- Phone -->
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone:</label>
                    <input value="@Model.Phone" type="tel" id="phone" name="phone" class="form-control">
                </div>

                <!-- Mobile -->
                <div class="mb-3">
                    <label for="mobile" class="form-label">Mobile:</label>
                    <input value="@Model.Mobile" type="tel" id="mobile" name="mobile" class="form-control" required>
                </div>

                <!-- Address -->
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <input value="@Model.Address" id="address" name="address" class="form-control" rows="3" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies (optional) -->

</body>
