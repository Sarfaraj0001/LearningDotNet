@model IEnumerable<LearningDotNet.Models.User>
@{
    ViewBag.Title = "GetAllUsers";
    Layout = "~/Views/Admin_LayoutPage2.cshtml";
}

@*@model IEnumerable<dynamic>*@

@*@{
    ViewBag.Title = "All Users";
}*@

<div class="container">
    <h2>All Users</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Profile Image</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Mobile</td>
                        <td>@user.Address</td>
                        <td>
                            @if (user.ProfileImage != null)
                            {
                                <img src="@Url.Action("GetUserImage", new { userId = user.UserId })" alt="Profile Image" width="100" height="100" />
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </td>
                        <td style="border: 1px solid #ddd; padding: 8px;">
                            <a href="@Url.Action("GetUserDetailsForEdit", "Admin", new { userId = user.UserId })"
                               style="display: inline-block; padding: 10px 20px; background-color: #343a40; color: white; text-decoration: none; border-radius: 4px; font-size: 16px; text-align: center;">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>


