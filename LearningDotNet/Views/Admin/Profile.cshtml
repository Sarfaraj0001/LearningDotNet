@model IEnumerable<LearningDotNet.Models.User>
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Admin_LayoutPage2.cshtml";
}

<section style="background-color: #eee;">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["msg"]
        </div>
    }
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Profile">Show data</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>
        @foreach (var user in Model)
        {
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            @*@if (!string.IsNullOrEmpty(user.ProfileImageBase64))
                                {
                                    <img src="data:image/jpeg;base64,@user.ProfileImageBase64" alt="avatar"
                                         class="rounded-circle img-fluid" style="width: 150px;">
                                }
                                else
                                {
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                         class="rounded-circle img-fluid" style="width: 150px;">
                                }*@
                            <h5 class="my-3">@user.FullName</h5>
                            <p class="text-muted mb-1">Full Stack Developer</p>
                            <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>

                            <div class="d-flex justify-content-center mb-2">
                                <a class="btn btn-primary text-white" href="/Admin/GetUserImageForEdit?userId=@user.UserId">Update Profile</a>
                                <a class="btn btn-primary ms-1 text-white" href="/Admin/GetUserDetailsForEdit?userId=@user.UserId">Edit Profile Details</a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                                <form action="/Admin/DeleteProfileImage" method="POST" onsubmit="return confirm('Are you sure you want to delete the profile image?');">
                                    <input type="hidden" name="userId" value="@user.UserId" />
                                    <button type="submit" class="btn btn-danger">Remove Profile</button>
                                </form>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Full Name</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@user.FullName</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@user.Email</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@user.Phone</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@user.Mobile</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Address</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@user.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        }
    </div>
</section>

